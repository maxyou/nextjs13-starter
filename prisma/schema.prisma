datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
}

model TodoItem {
  id      String  @id @default(uuid())
  content String
  done    Boolean @default(false)
  user    User    @relation(fields: [userId], references: [id])
  userId  String
}

model User {
  id      String  @id @default(uuid())
  from    String
  name    String  @unique
  nickname String?
  password String?
  avatar   String?
  email   String?
  logined    Boolean? @default(false)
  todoItems TodoItem[]
}